<div class='container'>
    <div class='row' id='head'>
        <div class='twelve columns'>
                <h2>Waiters Availability App</h2>
                </div>
                </div>
                <br>
                <div class='row'>
     <a href="/admin"><button type="submit" class='admin'><strong>Admin</strong></button></a>
            <form action='/waiters/{{username}}' method="POST">
                    <div class='twelve columns' id="message">
                        <h6 class="info">
                           <strong>
                               {{messages.info}}
                           </strong> 
                        </h6>
                    </div>
                </div>
                <hr>
        <div class='row'>
            <div class='twelve columns' id='daysOfWeek'>
                {{#each getAllDays}}
                <input  class="checkId" type='checkbox' id='checkId_{{id}}' name='weekdays' value='{{day}}' {{checked}}>
                <label for='checkId_{{id}}'>{{day}}</label>
                {{/each}}
                <button type="submit" id='submit'><strong>Submit</strong></button>
                </form>
            </div>
        </div>
     <hr>
